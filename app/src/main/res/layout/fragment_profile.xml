<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profileicon" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="Name:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/profileName"
        android:text="jkdasdj" />

    <TextView
        android:id="@+id/profileAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileName"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:text="Age:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/age"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileName"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/profileAge"
        android:text="dijasdoi" />

    <TextView
        android:id="@+id/cuisineType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dietaryInstruction"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:text="Cuisine Type:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/diet"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileAge"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/dietaryInstruction"
        android:text="idjasiodj" />

    <TextView
        android:id="@+id/dietaryInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileAge"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:text="Dietary Instruction:"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/cuisine"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/diet"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/cuisineType"
        android:text="idhaisud" />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cuisineType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Save" />
</RelativeLayout>
